<h2>Editing Book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
<h3>errorが<%= @book.errors.count %>件あります</h3>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>

    <%= link_to "Show", book_path %>
    <%= link_to "Back", books_path %>
<% end %>
