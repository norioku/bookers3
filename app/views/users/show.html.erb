<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="container">
<div class="row">
<div class="col-lg-3">

<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, style: "width:100px; height:100px;", format: 'jpg',fallback: "no_images.jpg" %>

　<p>name  <%= @user.name %></p>

  <p>introduction  <%= @user.introduction %></p>

  <%= link_to edit_user_path(@user), class: "btn btn-default form-control " do %>
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
<h3>errorが<%= @book.errors.count %>件あります</h3>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
</div>

<div class="col-lg-9">
<h2>Books</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>
            <tbody>
            <% @user.books.each do |book| %>
             <tr>
             <td>
             <%= link_to book_path(book.id) do %>
             <%= attachment_image_tag @user, :profile_image, style: "width:40px; height:40px;", format: 'jpg',fallback: "no_images.jpg" %>
             <% end %>
             </td>
              <td><%= link_to  book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
            </tbody>
        </table>
      </div>
    </div>
  </div>